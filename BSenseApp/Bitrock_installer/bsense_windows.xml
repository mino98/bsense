<project>
    <shortName>bsense</shortName>
    <fullName>BSense</fullName>
    <version>0.5.2</version>
    <installerFilename>bsense-windows.exe</installerFilename>
    <postInstallationActionList>
        <registrySet>
            <customErrorMessage>Error in setting registry preferences</customErrorMessage>
            <key>HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Run</key>
            <name>bsense</name>
            <progressText>Configuring self-start...</progressText>
            <type>REG_SZ</type>
            <value>${installdir}\bsense.exe</value>
        </registrySet>
    </postInstallationActionList>
    <preUninstallationActionList>
        <registryDelete>
            <abortOnError>0</abortOnError>
            <key>HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Run</key>
            <name>bsense</name>
            <progressText>Removing settings...</progressText>
        </registryDelete>
    </preUninstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <vendor>University of Edinburgh</vendor>
    <componentList>
        <component>
            <name>BSense</name>
            <description>BSense</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>windows</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>BSense</description>
                    <destination>${installdir}</destination>
                    <name>BSensewindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>C:/bsense/trunk/D-ITG/bin/ITGRecv.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense/trunk/D-ITG/bin/ITGSend.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense/trunk/D-ITG/bin/ITGDec.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/mingwm10.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/QtCore4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/QtGui4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/QtNetwork4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/QtXml4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense/trunk/BSenseApp/release/bsense.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>C:/bsense-addons/QtSvg4.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>iconengines</description>
                    <destination>${installdir}/iconengines</destination>
                    <name>iconengines</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>C:/bsense-addons/iconengines/qsvgicon4.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start the BSense monitoring system</comment>
                    <name>BSense</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bsense.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <finalPageActionList>
        <runProgram>
            <program>${installdir}/bsense.exe</program>
            <programArguments></programArguments>
            <progressText>Start BSense now...</progressText>
            <workingDirectory>${installdir}/</workingDirectory>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

